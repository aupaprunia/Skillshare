<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/quattrocento_sans"
                android:gravity="center"
                android:text="Let's Get You registered"
                android:textColor="@color/black_02"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/quattrocento_sans"
                android:text="We promise, it will only take a few minutes"
                android:textColor="@color/black_02"
                android:textSize="16sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgRegProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:civ_border_color="#020202"
                app:civ_border_width="1dp"
                android:src="@drawable/ic_user_150" />

            <EditText
                android:id="@+id/etRegPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="3dp"
                android:ems="10"
                android:fontFamily="@font/quattrocento_sans"
                android:hint="Enter Mobile Number"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/black_02"
                android:textColorHint="#707070"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtSignUpOtpDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/quattrocento_sans"
                android:text="You will receive OTP on the mobile number you provided while registering."
                android:textColor="@color/black"
                android:visibility="visible" />

            <EditText
                android:id="@+id/etSignUpOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_keyboard"
                android:drawablePadding="3dp"
                android:ems="10"
                android:fontFamily="@font/quattrocento_sans"
                android:hint="Enter OTP"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/black_02"
                android:textColorHint="#707070"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etRegUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="3dp"
                android:ems="10"
                android:fontFamily="@font/quattrocento_sans"
                android:hint="Set Username"
                android:inputType="textPersonName"
                android:textColor="@color/black_02"
                android:textColorHint="#707070"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etRegPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="3dp"
                android:ems="10"
                android:fontFamily="@font/quattrocento_sans"
                android:hint="Set Password"
                android:inputType="textPassword"
                android:textColor="@color/black_02"
                android:textColorHint="#707070"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etRegCPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="3dp"
                android:ems="10"
                android:fontFamily="@font/quattrocento_sans"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="@color/black_02"
                android:textColorHint="#707070"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtRegLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_corner10_black"
                android:fontFamily="@font/quattrocento_sans"
                android:padding="15dp"
                android:text="Select Location"
                android:textColor="#707070"
                android:textSize="14sp" />


            <androidx.cardview.widget.CardView
                android:id="@+id/btnSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:elevation="8dp"
                app:cardBackgroundColor="#191919"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quattrocento_sans"
                    android:gravity="center"
                    android:paddingLeft="50dp"
                    android:paddingTop="15dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="15dp"
                    android:text="REGISTER"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnSignUpOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:elevation="8dp"
                app:cardBackgroundColor="#191919"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quattrocento_sans"
                    android:gravity="center"
                    android:paddingLeft="50dp"
                    android:paddingTop="15dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="15dp"
                    android:text="REGISTER"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/txtRegLoginIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/quattrocento_sans"
                android:text="@string/sign_in_here"
                android:textColor="@color/black_02"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>